{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block body %}
    <h1>Détails de l'utilisateur</h1>

    <p>ID : {{ user.id }}</p>
    <p>Nom d'utilisateur : {{ user.username }}</p>
    <p>Email : {{ user.email }}</p>

    <a href="{{ path('app_user_index') }}">Retour à la liste</a>
    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>

    <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
        <button type="submit" onclick="return confirm('Êtes-vous sûr ?');">Supprimer</button>
    </form>
{% endblock %}
