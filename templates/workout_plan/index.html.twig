{% extends 'base.html.twig' %}

{% block title %}WorkoutPlan index{% endblock %}

{% block body %}
    <h1>WorkoutPlan index</h1>
    <a href="{{ path('app_admin_dashboard') }}">Admin Dashboard</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Level</th>
                <th>Duration</th>
                <th>Exercises</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for workout_plan in workout_plans %}
            <tr>
                <td>{{ workout_plan.id }}</td>
                <td>{{ workout_plan.name }}</td>
                <td>{{ workout_plan.description }}</td>
                <td>{{ workout_plan.level }}</td>
                <td>{{ workout_plan.duration }}</td>
                <td>{{ workout_plan.exercises }}</td>
                <td>
                    <a href="{{ path('app_workout_plan_show', {'id': workout_plan.id}) }}">show</a>
                    <a href="{{ path('app_workout_plan_edit', {'id': workout_plan.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_workout_plan_new') }}">Create new</a>
{% endblock %}
