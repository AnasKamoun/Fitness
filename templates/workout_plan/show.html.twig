{% extends 'base.html.twig' %}

{% block title %}WorkoutPlan{% endblock %}

{% block body %}
    <h1>WorkoutPlan</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ workout_plan.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ workout_plan.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ workout_plan.description }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ workout_plan.level }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ workout_plan.duration }}</td>
            </tr>
            <tr>
                <th>Exercises</th>
                <td>{{ workout_plan.exercises }}</td>
            </tr>
            <tr>
                <th>Join</th>
                <td>
                    <form method="post" action="{{ path('workout_plan_join', {'id': workout_plan.id}) }}">
                        <button type="submit" class="btn btn-primary">Join This Plan</button>
                    </form>
                </td>

            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_workout_plan_index') }}">back to list</a>

    <a href="{{ path('app_workout_plan_edit', {'id': workout_plan.id}) }}">edit</a>

    {{ include('workout_plan/_delete_form.html.twig') }}
{% endblock %}
